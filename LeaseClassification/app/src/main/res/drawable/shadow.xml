<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#caf9f7f7" ></stroke>
            <corners

                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
            <gradient
                android:endColor="#e1e4e4"
                android:startColor="#d3d4d4"
                android:type="linear" />

        </shape>
    </item>

    <item
        android:right="5dp"
        android:bottom="4dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/userBubble" />

            <solid android:color="@color/userBubble" />

            <corners

                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
            <padding android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp"/>
        </shape>
    </item>
</layer-list>